<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".view.FarmerHomeActivity"
    tools:showIn="@layout/app_bar_farmer_home">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/consTraintFarmerDashBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llTopFarmerDashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <android.support.v7.widget.CardView
                android:id="@+id/cvMyProduct"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/tvMyProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableTop="@drawable/ic_store_black_24dp"
                    android:gravity="center"
                    android:text="My Product"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/cvManageStock"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/tvManageStock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableTop="@drawable/ic_local_grocery_store_black_24dp"
                    android:gravity="center"
                    android:text="Manage Stock"
                    android:textColor="@android:color/black" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cvViewStock"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/tvViewStock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableTop="@drawable/ic_storage_black_24dp"
                    android:text="View Stock"
                    android:textColor="@android:color/black" />


            </android.support.v7.widget.CardView>


        </LinearLayout>



        <LinearLayout
            android:id="@+id/llBottomFarmerDashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llTopFarmerDashboard">


            <android.support.v7.widget.CardView
                android:id="@+id/cvFarmerTransaction"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/tvFarmerTransaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableTop="@drawable/ic_local_grocery_store_black_24dp"
                    android:gravity="center"
                    android:text="View Transaction"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />


            </android.support.v7.widget.CardView>




        </LinearLayout>




    </android.support.constraint.ConstraintLayout>




</ScrollView>