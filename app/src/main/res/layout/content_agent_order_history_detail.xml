<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".view.AgentOrderHistoryDetail"
    tools:showIn="@layout/activity_agent_order_history_detail">

    <LinearLayout
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="12sp"
            android:layout_marginTop="16dp"
            android:text="Order No:-"
            android:id="@+id/lableOrderNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            tools:text="92322332"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:id="@+id/tvOrderNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:textSize="12sp"
            android:layout_marginTop="16dp"
            android:text="Name"
            android:id="@+id/lableName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            tools:text="Mr Akash Ambani"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <TextView
            android:textSize="12sp"
            android:layout_marginTop="16dp"
            android:text="Date:"
            android:id="@+id/lableDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            tools:text="20-7-2018"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:textSize="12sp"
            android:layout_marginTop="16dp"
            android:text="Status:"
            android:id="@+id/lableStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView

            tools:text="Delivered"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="16dp"
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:textSize="12sp"
            android:layout_marginTop="16dp"
            android:text="Total Amount"
            android:id="@+id/lableTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            tools:text="800"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:id="@+id/tvTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:textSize="12sp"
            android:layout_marginTop="16dp"
            android:text="Received Amount"
            android:id="@+id/lableReceivedAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            tools:text="800"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:id="@+id/tvReceivedAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>




</ScrollView>